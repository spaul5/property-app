{{#section 'head'}}
    <link rel="stylesheet" href="/styles/auth.css">
{{/section}}

<div class="container">
  <form method="POST" action="/reset" class="form-signin">
    <h2 class="form-signin-heading">Reset Password</h2>
    
    {{#if errorMessage}}
      <div class="alert alert-danger">
        {{errorMessage}}
      </div>
    {{/if}}

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="New Password" required>

    <label for="inputPassword" class="sr-only">Repeat Password</label>
    <input type="password" id="inputPassword2" name="password2" class="form-control" placeholder="Repeat Password" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
  </form>
</div>